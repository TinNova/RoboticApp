<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.tin.roboticapp.Activities.QaDetailActivity">

    <TextView
        android:id="@+id/qa_detailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What does the company do?"
        android:textSize="21sp"
        android:paddingBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/shortTextLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="clip_vertical"
        android:paddingTop="6dp"
        android:src="@drawable/ic_short_text_black_24dp" />

    <EditText
        android:id="@+id/answer_editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp"
        tools:text="This is the answer to the question that can be edited at any point."
        android:textSize="15sp"/>

    </LinearLayout>
</LinearLayout>

